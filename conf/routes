# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Skip Bo

GET     /                           controllers.SkipBoController.skipBo

GET     /about                      controllers.SkipBoController.about

GET     /rules                      controllers.SkipBoController.rules()

GET     /board                      controllers.SkipBoController.board()

+nocsrf
POST    /command                    controllers.SkipBoController.processRequest

GET     /status                     controllers.SkipBoController.status()


GET     /websocket                  controllers.SkipBoController.socket

GET     /chat                       controllers.SkipBoController.chat

+nocsrf
POST    /getChat                    controllers.SkipBoController.getChat

+nocsrf
POST    /sendChat                   controllers.SkipBoController.receiveMsg



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
