# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Skip Bo

GET     /                           controllers.SkipBoController.skipBo

GET     /about                      controllers.SkipBoController.about

GET     /rules                      controllers.SkipBoController.rules()

GET     /board                      controllers.SkipBoController.board()

POST    /command                    controllers.SkipBoController.processRequest

GET     /status                     controllers.SkipBoController.status()

GET     /hand_Ablagestapel/:whichCard/:whereCard          controllers.SkipBoController.hand_Ablagestapel(whichCard: Int, whereCard: Int)

GET     /spielerstapel_Ablagestapel/:whereCard      controllers.SkipBoController.spielerstapel_Ablagestapel(whereCard: Int)

GET     /hand_Hilfestapel/:whichCard/:whereCard     controllers.SkipBoController.hand_Hilfestapel(whichCard: Int, whereCard: Int)

GET     /hilfestapel_Ablagestapel/:whichCard/:whereCard     controllers.SkipBoController.hilfestapel_Ablagestapel(whichCard: Int, whereCard: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
